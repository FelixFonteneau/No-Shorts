{
    "manifest_version": 2,
    "name": "No-Shorts",
    "version": "1.0",
  
    "description": "Remove youtube shorts on youtube.com and remove shorts/reels on facebook.com",
  
    "icons": {
      "48": "icons/icon-48.png"
    },
  
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*", "*://*.facebook.com/*"],
        "js": ["no-shorts.js"]
      }
    ]
  }
  